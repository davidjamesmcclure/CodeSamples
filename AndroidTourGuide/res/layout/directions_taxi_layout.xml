<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<ImageView android:src="@drawable/edinburghcrest"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/EdUniCrest" android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"></ImageView>
	<TextView android:layout_height="wrap_content" android:id="@+id/banner"
		android:text="Taxi From Waverley" android:textColor="#FFFFFF"
		android:gravity="center" android:textSize="20dp" android:layout_width="wrap_content"
		android:layout_alignParentTop="true" android:layout_toRightOf="@+id/EdUniCrest"
		android:layout_alignParentRight="true" android:layout_alignBottom="@+id/EdUniCrest"
		android:background="#25476C"></TextView>
	<TextView android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="A taxi can be called using either one of the following numbers:"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:id="@+id/textView1" android:textColor="#25476C"
		android:layout_below="@+id/EdUniCrest"
		android:layout_centerHorizontal="true" android:layout_marginTop="23dp"></TextView>
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/taxi_paragraph4" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/textView4"
		android:layout_below="@+id/textView3" android:textColor="#25476C"
		android:layout_toRightOf="@+id/EdUniCrest" android:layout_marginTop="26dp"></TextView>
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/taxi_paragraph5" android:layout_height="wrap_content"
		android:textColor="#25476C" android:layout_width="wrap_content"
		android:id="@+id/textView5" android:layout_below="@+id/textView4"
		android:layout_alignLeft="@+id/textView4"></TextView>
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="@string/taxi_paragraph6" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/textView6"
		android:textColor="#25476C" android:layout_below="@+id/textView5"
		android:layout_toRightOf="@+id/EdUniCrest"></TextView>
	<TextView android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="@string/taxi_paragraph1" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/textView11"
		android:textColor="#25476C" android:layout_below="@+id/textView1"
		android:layout_alignParentLeft="true" android:layout_marginTop="48dp"></TextView>
	<TextView android:id="@+id/textView7" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="@string/taxi_link1"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:autoLink="all" android:textColor="#25476C"
		android:layout_alignBaseline="@+id/textView11"
		android:layout_alignBottom="@+id/textView11" android:layout_toRightOf="@+id/textView11"></TextView>
	<TextView android:id="@+id/textView8" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="@string/taxi_link2"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:autoLink="all" android:textColor="#25476C"
		android:layout_alignBaseline="@+id/textView2"
		android:layout_alignBottom="@+id/textView2" android:layout_toRightOf="@+id/textView2"></TextView>
	<TextView android:id="@+id/textView3" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="@string/taxi_paragraph3"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="#25476C" android:layout_below="@+id/textView8"
		android:layout_alignParentLeft="true" android:layout_marginTop="68dp"></TextView>
	<TextView android:id="@+id/textView2" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:text="@string/taxi_paragraph2"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="#25476C" android:layout_below="@+id/textView11"
		android:layout_alignParentLeft="true" android:layout_marginTop="53dp"></TextView>

</RelativeLayout>