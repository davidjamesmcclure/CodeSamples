<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.menus.app"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="10" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <activity android:name=".HomeMenu"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".GetDirections" android:label="GetDirections" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        </activity>
        
        <activity android:name=".DirectionDisplay" android:label="DirectionDisplay" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        </activity>
        
        <activity android:name=".FindFood" android:label="FindFood" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        </activity>
        
		<activity android:name=".CoffeeTab" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
		</activity>
		
		<activity android:name=".CoffeeDetail" android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
		
        <activity android:name=".LunchTab" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        </activity>
        
        <activity android:name=".LunchDetail" android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
        
        <activity android:name=".DinnerTab" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        </activity>
        
        <activity android:name=".DinnerDetail" android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>
        
        <activity android:name=".HotelTab" android:label="Hotels" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        </activity>
        
        <activity android:name=".HotelDetail" android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>        
        
        <activity android:name=".Information" android:label="Information" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        </activity>
       

    </application>
</manifest>